[
  // Direct tab navigation (overrides default Ctrl+Tab quick switcher popup)
  // Default bindings: Ctrl+PageDown/PageUp also work for direct switching
  {
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditor"
  },

  // Claude code new line shortcut
  {
    "key": "shift+enter",
    "when": "terminalFocus",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "\\\n"
    }
  }
]
